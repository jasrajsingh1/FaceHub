extends layout

block additional-styling
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput-typeahead.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.css')
    link(rel='stylesheet' href='/stylesheets/create-account.css')

block content
    div.card.container: div.card-body
        h3 Edit Your Account
        hr
        form(method='post' action='' enctype='multipart/form-data')
            div.form-row
                div.form-group
                    label(for='email') Email:
                    input.form-control(type='email' id='email' name='email' required = "yes" value=email) 
                    label(for='name') Name:
                    input.form-control(type='text' id='name' name='name' required = "yes" value=name)
                    
            div.form-row
                div.col-sm-4#image-container
                    p Click below to upload new profile picture
                    div.dropZoneContainer
                        input.form-control.FileUpload(name='pic' type='file' onchange='handleFileSelect(this)' accept='.jpg,.png,.gif')
                        div.dropZoneOverlay.empty
                            p Drag and drop your image
                            p <b>or click here.</b>
                            

                div.col-sm-8#text-container
                    div.form-group
                        label(for='number') Phone Number:
                        input.form-control(type='text' id='number' name='number' required = "yes" value=phonenumber) 
                        label(for='tags') Interests:
                        select.form-control(multiple id='tags' data-role='tagsinput' name='tags[]' required="yes")
                            each tag in interests
                                option(value=tag)= tag

                    br
                    br
                    br
                    br
                    br
                    br

                                
                  
                        
                

            div.action-group
                button.btn.btn-primary(type='submit') Update



block additional-libraries
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.js')
    script(src='/javascripts/edit-entry.js')
    script.
        updateFile('#{path}');